.main__content__message
  .main__content__message__upper-box
    .main__content__message__upper-box__user-name
      = message.user.name
    .main__content__message__upper-box__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main__content__message__text-box
    - if message.content.present?
      %p.main__content__message__text-box__text
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?