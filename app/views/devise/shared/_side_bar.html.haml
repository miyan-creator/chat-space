.side-bar
  .side
    .side__header
      .side__header__box
        %h3.side__header__box__user-name
          = current_user.name
        %ul.side__header__box__menu
          %li.side__header__box__menu__new-mark
            =link_to new_group_path do
              = fa_icon 'pencil-square-o', class: 'icon'
          %li.side__header__box__menu__edit-mark
            =link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'
    .side__groups
      .side__group
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .side__group__names
              = group.name
            .side__group__latest-message
              = group.show_last_message
